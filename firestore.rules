rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Resumes collection
    match /resumes/{resumeId} {
      // Allow reading resumes - check userId in query or document
      allow read: if request.auth != null && (
        // For get() - check document's userId
        resource.data.userId == request.auth.uid ||
        // For list/query - Firebase will filter by userId in query
        request.auth.uid != null
      );

      // Allow writing resumes
      allow write: if request.auth != null &&
                      request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
                      request.auth.uid == request.resource.data.userId;
    }

    // Notes collection
    match /notes/{noteId} {
      allow read: if request.auth != null &&
                     request.auth.uid == resource.data.userId;
      allow write: if request.auth != null &&
                      request.auth.uid == resource.data.userId;
      allow create: if request.auth != null &&
                      request.auth.uid == request.resource.data.userId;
    }

    // Applicants collection (bulk upload candidates)
    match /applicants/{applicantId} {
      // Allow authenticated users to read their own applicants
      allow read: if request.auth != null &&
                     request.auth.uid == resource.data.userId;

      // Allow backend to create (using Admin SDK, bypasses these rules)
      // Frontend users can also create
      allow create: if request.auth != null;

      // Allow users to update their own applicants
      allow update: if request.auth != null &&
                       request.auth.uid == resource.data.userId;

      // Allow users to delete their own applicants
      allow delete: if request.auth != null &&
                       request.auth.uid == resource.data.userId;
    }

    // Batch uploads collection (tracking bulk upload jobs)
    match /batch_uploads/{batchId} {
      allow read: if request.auth != null &&
                     request.auth.uid == resource.data.userId;

      // Allow authenticated users to create batch uploads
      allow create: if request.auth != null &&
                      request.auth.uid == request.resource.data.userId;

      // Allow backend/n8n to update batch status (no auth for webhook updates)
      // In production, restrict this to service account writes only
      allow update: if true;

      allow delete: if request.auth != null &&
                       request.auth.uid == resource.data.userId;
    }

    // Jobs collection (if you add job postings in the future)
    match /jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
